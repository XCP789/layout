<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="layout.MainPage"
             Title="Menú Principal">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20" Padding="30" WidthRequest="300">

            <Label Text="Agenda de Contactos" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>
            
            <Button Text="Lista de Contactos" 
                    Clicked="IrListaContactos"
                    HeightRequest="50"
                    CornerRadius="8"/>

            <Button Text="Crear Nuevo Contacto" 
                    Clicked="IrCrearContacto"
                    HeightRequest="50"
                    CornerRadius="8"/>

            <Button Text="Configuración" 
                    Clicked="IrConfiguracion"
                    HeightRequest="50"
                    CornerRadius="8"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
