<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="layout.Contactos"
             Title="Contactos">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- TÃ­tulo con x:Name agregado -->
            <Label x:Name="titleLabel" 
               Text="Agenda" 
               FontAttributes="Bold" 
               FontSize="Large" 
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

            <!-- Lista de contactos -->
            <CollectionView x:Name="contactosView" 
                        ItemsSource="{Binding Contacto}"
                        SelectionMode="Single" 
                        SelectionChanged="OnContactoSeleccionado">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Eliminar" 
                                           BackgroundColor="Red" 
                                           Invoked="OnEliminarContacto" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame BorderColor="Navy" 
                               BackgroundColor="#F0F8FF"
                               CornerRadius="10" 
                               Margin="5" 
                               Padding="15"
                               HasShadow="True">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Nombre}" 
                                       FontAttributes="Bold" 
                                       FontSize="Medium" 
                                       TextColor="Navy" />
                                    <Label Text="{Binding Telefono}" 
                                       FontSize="Small" 
                                       TextColor="Gray" />
                                    <Label Text="{Binding CorreoElectronico}" 
                                       FontSize="Small" 
                                       TextColor="Gray" 
                                       FontAttributes="Italic" />
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
